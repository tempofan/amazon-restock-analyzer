# 领星ERP API配置示例文件
# 复制此文件为 .env 并填入真实的配置信息

# API配置
LINGXING_APP_ID=your_app_id_here
LINGXING_APP_SECRET=your_app_secret_here

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=False

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/lingxing_api.log

# 数据库配置（如果需要）
# DATABASE_URL=sqlite:///data/app.db

# 其他配置
MAX_RETRIES=3
REQUEST_TIMEOUT=30
DEFAULT_PAGE_SIZE=20